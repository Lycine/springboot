<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.artbrain.dao.mapper.UserMapper">

    <resultMap id="user" type="com.artbrain.entity.User">
        <id property="id" column="id" javaType="INTEGER" jdbcType="INTEGER"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="salt" column="salt" jdbcType="VARCHAR"/>
        <result property="loginName" column="login_name" jdbcType="VARCHAR"/>
        <result property="nickName" column="nick_name" jdbcType="VARCHAR"/>
        <result property="email" column="email" jdbcType="VARCHAR"/>
        <result property="phoneNumber" column="phone_number" jdbcType="VARCHAR"/>
        <result property="role" column="role" jdbcType="VARCHAR"/>
        <result property="loginIp" column="login_ip" jdbcType="VARCHAR"/>
        <result property="loginFailureCount" column="login_failure_count" javaType="INTEGER" jdbcType="INTEGER"/>
        <result property="isDel" column="is_del" javaType="INTEGER" jdbcType="TINYINT"/>
        <result property="isStop"  column="is_stop" javaType="INTEGER" jdbcType="TINYINT"/>
        <result property="addTime" column="add_time" javaType="java.util.Date" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" javaType="java.util.Date" jdbcType="TIMESTAMP"/>
        <result property="lastTime" column="last_time" javaType="java.util.Date" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,
        password as password,
        salt as salt,
        login_name as loginName,
        nick_name as nickName,
        email as email,
        phone_number as phoneNumber,
        role as role,
        login_ip as loginIp,
        login_failure_count as loginFailureCount,
        is_del as isDel,
        is_stop as isStop,
        add_time as addTime,
        update_time as updateTime,
        last_time as lastTime
    </sql>
    <select id="selectUserById" parameterType="com.artbrain.entity.User" resultType="com.artbrain.entity.User">
        SELECT
        <include refid="Base_Column_List"/>
        FROM `user` WHERE id = #{user.id};
    </select>

    <update id="updateUserById" parameterType="com.artbrain.entity.User">
        UPDATE user SET
        <if test="user.password!=null and user.password!=''">
            password = #{user.password},
        </if>
        <if test="user.salt!=null and user.salt!=''">
            salt = #{user.salt},
        </if>
        <if test="user.loginName!=null and user.loginName!=''">
            login_name = #{user.loginName},
        </if>
        <if test="user.nickName!=null and user.nickName!=''">
            nick_name = #{user.nickName},
        </if>
        <if test="user.email!=null and user.email!=''">
            email = #{user.email},
        </if>
        <if test="user.phoneNumber!=null and user.phoneNumber!=''">
            phone_number = #{user.phoneNumber},
        </if>
        <if test="user.role!=null and user.role!=''">
            role = #{user.role},
        </if>
        <if test="user.loginIp!=null and user.loginIp!=''">
            login_ip = #{user.loginIp},
        </if>
        <if test="user.isDel!=null and user.isDel!=-1">
            is_del = #{user.isDel},
        </if>
        <if test="user.isStop!=null and user.isStop!=-1">
            is_stop = #{user.isStop},
        </if>
        <if test="user.addTime!=null">
            add_time = #{user.addTime,jdbcType=TIMESTAMP},
        </if>
        <if test="user.updateTime!=null">
            update_time = #{user.updateTime,jdbcType=TIMESTAMP},
        </if>
        <if test="user.lastTime!=null">
            last_time = #{user.lastTime,jdbcType=TIMESTAMP},
        </if>
        login_failure_count = 0
        WHERE id = #{user.id};
    </update>

    <update id="addUserLoginFailureCountById" parameterType="com.artbrain.entity.User">
        UPDATE user SET
        login_failure_count = #{user.loginFailureCount}
        WHERE id = #{user.id};
    </update>

    <update id="deleteUserById" parameterType="com.artbrain.entity.User">
        UPDATE passage SET status=1 WHERE status=0 limit 1;
    </update>

    <update id="realDeleteUserById" parameterType="com.artbrain.entity.User">
        UPDATE passage SET status=1 WHERE status=0 limit 1;
    </update>

    <insert id="addUserById" parameterType="com.artbrain.entity.User">
        INSERT INTO user (
        <if test="user.password!=null and user.password!=''">
            password,
        </if>
        <if test="user.salt!=null and user.salt!=''">
            salt,
        </if>
        <if test="user.email!=null and user.email!=''">
            email,
        </if>
        <if test="user.role!=null and user.role!=''">
            role,
        </if>
        <if test="user.nickName!=null and user.nickName!=''">
            nick_name,
        </if>
        login_name
        ) VALUES (
        <if test="user.password!=null and user.password!=''">
            #{user.password},
        </if>
        <if test="user.salt!=null and user.salt!=''">
            #{user.salt},
        </if>
        <if test="user.email!=null and user.email!=''">
            #{user.email},
        </if>
        <if test="user.role!=null and user.role!=''">
            #{user.role},
        </if>
        <if test="user.nickName!=null and user.nickName!=''">
            #{user.nickName},
        </if>
        #{user.loginName}
        )

    </insert>

    <select id="selectUserByEmailAndPassword" parameterType="com.artbrain.entity.User"
            resultType="com.artbrain.entity.User">
        SELECT * FROM user WHERE email = #{user.email} and password = #{user.email};
    </select>

    <select id="selectUserByloginNameAndPassword" parameterType="com.artbrain.entity.User"
            resultType="com.artbrain.entity.User">
        SELECT * FROM user WHERE login_name = #{user.loginName} and password = #{user.email};
    </select>

    <select id="selectUserByPhoneNumberAndPassword" parameterType="com.artbrain.entity.User"
            resultType="com.artbrain.entity.User">
        SELECT * FROM user WHERE phone_number = #{user.phoneNumber} and password = #{user.email};
    </select>

    <select id="selectUserByEmail" parameterType="com.artbrain.entity.User" resultType="com.artbrain.entity.User">
        SELECT * FROM user WHERE email = #{user.email};
    </select>

    <select id="selectUserByloginName" parameterType="com.artbrain.entity.User" resultType="com.artbrain.entity.User">
        SELECT * FROM user WHERE login_name = #{user.loginName};
    </select>

    <select id="selectUserByPhoneNumber" parameterType="com.artbrain.entity.User" resultType="com.artbrain.entity.User">
        SELECT * FROM user WHERE phone_number = #{user.phoneNumber};
    </select>
</mapper>